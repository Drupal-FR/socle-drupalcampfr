<iframe
        width="100%"
        height="300"
        frameborder="0"
        scrolling="no"
        marginheight="0"
        marginwidth="0"
        data-src="http://www.openstreetmap.org/export/embed.html?bbox={{ box_bottom_left_longitude }}%2C{{ box_bottom_left_latitude }}%2C{{ box_top_right_longitude }}%2C{{ box_top_right_latitude }}&amp;layer=mapnik&amp;marker={{ marker_latitude }}%2C{{ marker_longitude }}"
        class="b-lazy"
        style="border: 1px solid black">
</iframe>
<br/>
<small>
  <a href="http://www.openstreetmap.org/?mlat={{ latitude }}&amp;mlon={{ longitude }}#map={{ zoom_level }}/{{ latitude }}/{{ longitude }}">{{ 'View larger map'|t }}</a>
</small>
